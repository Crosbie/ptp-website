{{#each this.courses as |course|}}
<div class="col-xs-12 col-sm-6 col-md-6 col-lg-3">
    <div class="thumbnail">
        <div id="image-holder">
            <img src="{{course.image}}" alt="{{course.name}}">
        </div>
        <div class="caption">
            <h3>{{course.name}}</h3>
            <div id="desc-holder">
                <p>{{course.desc}}</p>
            </div>
            <p class="btn-para"><a id="{{course.id}}"  data-toggle="modal" data-target="#signUpModal" data-course="{{course.name}}" class="btn btn-success sign-up" role="button">Sign Up</a></p>
        </div>
    </div>
</div>
{{/each}}

{{> sign-up}}